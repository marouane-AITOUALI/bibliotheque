{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-semibold mb-4">Edit User</h1>

        <form action="{{ path('admin_edit_user', { id: user.id }) }}" method="POST">
            <div class="mb-4">
                <label for="username" class="block text-lg">Username</label>
                <input type="text" id="username" name="username" value="{{ user.username }}" class="w-full px-4 py-2 border border-gray-300 rounded-md">
            </div>
            <div class="mb-4">
                <label for="email" class="block text-lg">Email</label>
                <input type="email" id="email" name="email" value="{{ user.email }}" class="w-full px-4 py-2 border border-gray-300 rounded-md">
            </div>
            <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-md">Save Changes</button>
        </form>
    </div>
{% endblock %}
