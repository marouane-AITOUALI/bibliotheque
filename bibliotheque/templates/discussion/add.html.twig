{# templates/discussion/add.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Ajouter une Discussion - BiblioWorld{% endblock %}

{% block body %}
    <div class="container mx-auto p-6">
        <h1 class="text-center text-3xl font-semibold mb-6">Ajouter une Discussion pour le livre : {{ livre.titre }}</h1>

        {# Formulaire pour ajouter une discussion #}
        <div class="max-w-4xl mx-auto">
            {{ form_start(form) }}
            
            <div class="mb-4">
                {{ form_row(form.sujet, {'attr': {'class': 'px-4 py-2 border rounded-md w-full'}}) }}
            </div>
            
            <div class="mb-4">
                {{ form_row(form.message, {'attr': {'class': 'px-4 py-2 border rounded-md w-full h-32'}}) }}
            </div>

            <div class="text-center">
                <button type="submit" class="px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 transition">Ajouter la discussion</button>
            </div>

            {{ form_end(form) }}
        </div>

        {# Lien pour retourner Ã  la page du livre #}
        <div class="text-center mt-6">
            <a href="{{ path('livre_show', {'id': livre.id}) }}" class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">Retour au livre</a>
        </div>
    </div>
{% endblock %}
