{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
<section class="container mx-auto mt-12 px-6">
    <div class="flex justify-center">
        <div class="w-full max-w-md bg-white shadow-2xl rounded-xl p-8">
            <h1 class="text-3xl font-extrabold text-center text-gray-900 mb-8">Réinitialisation du mot de passe</h1>

            {# Afficher les erreurs #}
            {% if app.flashes('error') %}
                <div class="bg-red-100 border border-red-400 text-red-700 px-6 py-4 rounded-lg mb-6">
                    <strong class="font-medium">{{ app.flashes('error')[0] }}</strong>
                </div>
            {% endif %}

            {# Afficher les succès #}
            {% if app.flashes('success') %}
                <div class="bg-green-100 border border-green-400 text-green-700 px-6 py-4 rounded-lg mb-6">
                    <strong class="font-medium">{{ app.flashes('success')[0] }}</strong>
                </div>
            {% endif %}

            <form method="post">
                {{ form_start(form) }}
                
                <div class="mb-4">
                    {{ form_row(form.email, {
                        'attr': {
                            'class': 'w-full p-4 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none transition duration-300'
                        }
                    }) }}
                </div>

                <div class="mb-4">
                    {{ form_row(form.old_password, {
                        'attr': {
                            'class': 'w-full p-4 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none transition duration-300'
                        }
                    }) }}
                </div>

                <div class="mb-4">
                    {{ form_row(form.new_password, {
                        'attr': {
                            'class': 'w-full p-4 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none transition duration-300'
                        }
                    }) }}
                </div>

                <div class="flex justify-center mt-6">
                    {{ form_row(form.submit, {
                        'attr': {
                            'class': 'w-full py-3 px-4 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 focus:ring-4 focus:ring-indigo-500 focus:outline-none transition duration-300'
                        }
                    }) }}
                </div>

                {{ form_end(form) }}
            </form>
        </div>
    </div>
</section>
{% endblock %}
