{# templates/user/profile.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <div class="max-w-4xl mx-auto p-6">
        <h1 class="text-center text-3xl font-semibold mb-6">Mon Compte</h1>

        <div class="space-y-6">
            <p><strong>Nom d'utilisateur:</strong> {{ user.username }}</p>
            <p><strong>Email:</strong> {{ user.email }}</p>

            <div class="text-center">
                <a href="{{ path('user_edit_account') }}" class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
                    Éditer mes données
                </a>
            </div>
        </div>
    </div>
{% endblock %}
